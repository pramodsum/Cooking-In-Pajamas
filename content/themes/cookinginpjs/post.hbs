{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}

{{#post}}

<!-- more visible social buttons for post -->
<ul class="social-fixed">
  <li><a class="btn subscribe" href="http://eepurl.com/7YH6z"><i class="ion ion-social-rss"></i></a></li>
  <li><a class="btn comments" href="{{url}}#disqus_thread"><i class="ion ion-chatbubble"></i></a></li>
  <li><a class="btn twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"><i class="ion ion-social-twitter"></i></a></li>
  <li><a class="btn facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"><i class="ion ion-social-facebook"></i></a></li>
  <li><a class="btn gplus" href="https://plus.google.com/share?url={{url absolute="true"}}"><i class="ion ion-social-googleplus"></i></a></li>
</ul>


<div class="container-fluid">
  <div class="post-index">
    <div class="posts-container">

       <article class="{{post_class}}" id="posts">
          <div class="text-center">
            <h1>{{title}}</h1>

            <div class="post-meta date">
                <i class="ion-calendar"></i> <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                <i class="ion-chatbubble"></i> <a href="{{url}}#disqus_thread">Leave a Comment</a>
                <br>
                by {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="Author image" nopin="nopin" />{{/if}} <span class="author"><a href="{{author.website}}">{{author.name}}</a></a></span>
            </div>
          </div>
          <hr>
          <div>
            {{content}}
          </div>

          <hr>
          <div class="post-footer text-center">

              <section class="date">
                <i class="ion-pricetag"></i> {{tags}}
              </section>

              <section class="share">
                  <h4>
                      <br>Share this post<br>
                      <small>
                          <a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" class="btn-social"><i class="ion-social-twitter animated"></i></a>
                          <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" class="btn-social"><i class="ion-social-facebook animated"></i></a>
                          <a href="https://plus.google.com/share?url={{url absolute="true"}}" class="btn-social"><i class="ion-social-googleplus animated"></i></a>
                      </small>
                  </h4>
              </section>
              <section class="comments">
                <div id="disqus_thread"></div>
                  <script type="text/javascript">
                      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                      var disqus_shortname = 'cookinginpjs'; // required: replace example with your forum shortname

                      /* * * DON'T EDIT BELOW THIS LINE * * */
                      (function() {
                          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                          dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                      })();
                  </script>
                  <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
              </section>

            </div>

        </article>
    </div>
  </div>
</div>

